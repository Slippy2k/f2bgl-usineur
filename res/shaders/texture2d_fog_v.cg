void main(
	float3 position,
	float2 texcoord,
	column_major uniform float4x4 wvp,
	float4 out vPosition : POSITION,
	float out vFog : FOG,
	float2 out vTexcoord : TEXCOORD0)
{
	vPosition = mul(float4(position, 1.f), wvp);

	vFog = clamp((256.0 - vPosition.z) / 240.0, 0.0f, 1.0f);

	vTexcoord = texcoord;
}
