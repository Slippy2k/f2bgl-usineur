void main(
	float3 aPosition,
	uniform float psize,
	column_major uniform float4x4 wvp,
	float out vFog : FOG,
	float out vPsize : PSIZE,
	float4 out vPosition: POSITION)
{
	vPosition = mul(float4(aPosition, 1.f), wvp);

	vFog = clamp((256.0 - vPosition.z) / 240.0, 0.0f, 1.0f);

	vPsize = psize;
}

